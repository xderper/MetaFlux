<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="/icon.png"/>
      <square150x150logo src="/icon.png"/>
      <square310x310logo src="/icon.png"/>
      <wide310x150logo src="/icon.png"/>
      <TileColor>#8b5cf6</TileColor>
    </tile>
    <badge>
      <polling-uri src="/api/badge"/>
      <frequency>30</frequency>
    </badge>
    <notification>
      <polling-uri src="/api/notifications"/>
      <frequency>30</frequency>
      <cycle>1</cycle>
    </notification>
  </msapplication>
</browserconfig> 